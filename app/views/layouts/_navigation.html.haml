%a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
  %span.icon-bar
  %span.icon-bar
  %span.icon-bar
= link_to "Baby Brag", root_path, :class => 'brand'
.nav-collapse
  - if user_signed_in?
    .btn-group.pull-right
      %a.btn.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
        %i.icon-user
        /#{@user.name}
        %span.caret
      %ul.dropdown-menu
        - if user_signed_in?
          %li
            = link_to('Edit Account', edit_user_registration_path)
          %li.divider
        - if user_signed_in?
          %li
            = link_to('Logout', destroy_user_session_path, :method=>'delete', :class => 'btn btn-danger')
        - else
          %span 
%ul.nav
  - if user_signed_in?
    %li
      = link_to "Baby Pictures", baby_pics_path(@baby_pics)
    %li
      = link_to('Add a Picture!', new_baby_pic_path)
    - if current_user.has_role? :admin
      %li
        = link_to('Admin', users_path)
  - else
    %li